// font-size统一设置为11px

bg = #3d3d4a
trackWidth = 25em  // 11 * 25 = 275
trackheight = .02 * trackWidth // 0.02 * 275 = 5.5
thumbDiameter = .1 * trackWidth   // 0.1 * 275 = 27.5

track()
  border none
  width trackWidth // 275
  height trackheight // 5.5
  border-radius .5 * trackheight // 2.75
  background #343440

thumb()
  border none
  width thumbDiameter
  height thumbDiameter
  border-radius 50%
  background #e6323e

*
  margin 0

body
  background bg


/*
 * 去除range系统默认样式
 */
input[type='range']
  // 去除滑动条默认样式
  -webkit-appearance none
  background transparent  // 透明色
  outline none // 去掉外边框
  font-size 11px

  // 去除滑块默认样式，基于webkit的浏览器，如Chrome、Safari、Opera等
  &::-webkit-slider-thumb
    -webkit-appearance none



/*
 * 自定义range样式
 */
input[type='range']
  width trackWidth
  height thumbDiameter

  &::-webkit-slider-runnable-track
    track()

  &::-webkit-slider-thumb
    thumb()
    margin-top -(thumbDiameter - trackheight) * 0.5


/*
 * 布局样式优化
 */
.wrap
  position relative
  margin 2em auto
  width trackWidth
  font-size 11px  // 统一字体大小

output
  position absolute
  top 0
  width thumbDiameter
  height thumbDiameter
  display flex
  align-items center
  justify-content center
  color #fff
  // 除了指示该元素不是鼠标事件的目标之外，值none表示鼠标事件“穿透”该元素并且指定该元素“下面”的任何东西。
  pointer-events none
